    },
    {
      "name": "header",
      "title": "Header",
      "area": "header"
    },
    {
      "name": "main",
      "title": "Main",
      "area": "main"
    },
    {
      "name": "sidebar-left",
      "title": "Sidebar Left"
    },
    {
      "name": "sidebar-right",
      "title": "Sidebar Right"
    }
  ],
  "customTemplates": [
    {
      "name": "post-sidebar-right",
      "title": "Two columns, right sidebar",
      "postTypes": [
        "post"
      ]
    },
    {
      "name": "post-sidebar-left",
